generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearchPostgres", "postgresqlExtensions", "views"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [pgcrypto]
}

enum UserStatus {
  active
  inactive

  @@map("xpf_user_status")
}

model User {
  id       Int        @id @default(autoincrement()) @map("id")
  password String     @map("password") @db.VarChar
  status   UserStatus @map("status") @default(inactive)
  userId   String     @map("user_id") @db.VarChar

  profiles Profile[]

  @@map("xpf_users")
}

model Profile {
  id             Int     @id @default(autoincrement()) @map("id")
  userId         Int     @map("user_id")
  nickname       String  @map("nickname") @db.VarChar
  profileImage   String? @map("profile_image") @db.VarChar
  xAccountId     String  @map("x_account_id") @db.VarChar
  bio            String  @map("bio") @db.VarChar
  defaultProfile Boolean @map("default_profile") @default(false)

  items Item[]
  user  User   @relation(fields: [userId], references: [id])

  @@map("xpf_profiles")
}

model Item {
  id           Int     @id @default(autoincrement()) @map("id")
  profileId    Int     @map("profile_id")
  itemImageUrl String? @map("item_image_url") @db.VarChar
  title        String  @map("title") @db.VarChar
  memo         String  @map("memo") @db.VarChar

  profile Profile @relation(fields: [profileId], references: [id])

  @@map("xpf_items")
}
